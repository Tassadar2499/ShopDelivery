@using ShopsDbEntities

@model ProductDbSubCategory[]
@{
	ViewData["Title"] = "SubCategories";
}

<h1>Подкатегории</h1>

@foreach (var subCategory in Model)
{
	<div>
		<p>@subCategory.Name</p>
		<a asp-controller="Products"
		   asp-route-shopId="@ViewData["ShopId"]"
		   asp-route-categoryId="@ViewData["CategoryId"]"
		   asp-route-subCategoryId="@subCategory.Id">
			<img src="@subCategory.ImgUrl" />
		</a>
	</div>
}