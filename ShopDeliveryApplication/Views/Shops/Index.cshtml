@using ShopsDbEntities

@model Shop[]
@{
	ViewData["Title"] = "Shops";
}

<div id="ts-example">
	<br />
	<button type="button" class="btn btn-primary btn-md" onclick="TSButton()">
		Click Me
	</button>
</div>


<h1>Магазины</h1>

@foreach (var shop in Model)
{
	<div>
		<p>@shop.Name</p>
		<a asp-controller="ProductCategories"
		   asp-route-shopId="@shop.Id">
			<img src="@shop.ImgUrl" />
		</a>
	</div>
}