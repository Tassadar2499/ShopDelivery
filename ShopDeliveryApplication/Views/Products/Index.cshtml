@using ShopsDbEntities

@model Product[]
@{
	ViewData["Title"] = "Products";
}

<h1>Продукты</h1>

@foreach (var product in Model)
{
	<div>
		<p>@product.Name</p>
		<img src="@product.ImageUrl" />
		<p>@product.Price</p>
		<p>@product.Mass кг</p>
		<a><input class="btn btn-success" value="Добавить" onclick="addProductToBucket(@product.Id)" /></a>
	</div>
}

<script type="text/javascript">
    function addProductToBucket(id) {
		$.ajax({
			type: "GET",
			url: "Products/AddToBucket",
			data: { "productId": id },
		});
    }
</script>