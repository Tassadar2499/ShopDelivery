@using ShopDeliveryApplication.Models.Entities

@model BucketProduct[]
@{
	ViewData["Title"] = "Products";
}

<h1>Продукты</h1>

@foreach (var product in Model)
{
	<div>
		<p>@product.Name</p>
		<img src="@product.ImageUrl" />
		<p>@product.Price</p>
		<p>@product.Mass кг</p>
		<button class="btn btn-success" onclick="Bucket.addProductId(@product.Id)">Добавить</button>
		<button class="btn btn-success"  onclick="Bucket.removeProductId(@product.Id)">Удалить</button>
		<p class="product-count" number="@product.Id"></p>
	</div>
}
